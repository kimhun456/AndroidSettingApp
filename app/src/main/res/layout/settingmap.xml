<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map_map_l"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/map_linear_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/map_cancel_btn_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#71AED4"
            android:text="Cancel"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/map_ok_btn_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#71AED4"
            android:text="OK"
            android:textColor="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#07000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map_txt_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원하는 위치를 꾹 누르고 떼주세요"
            android:textColor="#71AED4" />
    </LinearLayout>

</RelativeLayout>